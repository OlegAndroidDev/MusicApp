<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/artistImage"
            android:layout_width="103dp"
            android:layout_height="93dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@id/artistTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_artistTitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Song"
            android:textColor="@color/purple_700"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@id/artistImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/artistTitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Name"
            android:textColor="@color/red"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="31dp"
            app:layout_constraintStart_toEndOf="@id/artistImage"
            app:layout_constraintTop_toBottomOf="@+id/lbl_artistTitle"/>

        <TextView
            android:id="@+id/lbl_ArtistName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:text="ArtistName"
            android:textColor="@color/purple_700"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@id/artistImage"
            app:layout_constraintTop_toBottomOf="@+id/artistTitle" />

        <TextView
            android:id="@+id/artistName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:text="ArtistName"
            android:textColor="@color/red"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@id/artistImage"
            app:layout_constraintTop_toBottomOf="@+id/lbl_ArtistName" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Price"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.068" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>